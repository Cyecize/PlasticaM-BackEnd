<div style="margin: 0 auto; padding: 20px;">
    <h2>Имате въпрос</h2>
    <div>
        <h3>От: {{ question.fullName }}</h3>
        <p>Дата: {{ question.date|date("F jS \\a\\t g:ia") }}</p>
        {% if question.phoneNumber is not null %}
            <p>Тел. номер: {{ question.phoneNumber }}</p>
        {% endif %}
        {% if question.email is not null %}
            <p>Email: {{ question.email }}</p>
        {% endif %}
    </div>
    <br>
    <div style="text-align: left;">
        <label for="message-box">Въпрос: </label><br>
        <div>
            <pre>{{ question.message }}</pre>
        </div>
    </div>
    <br>
</div>